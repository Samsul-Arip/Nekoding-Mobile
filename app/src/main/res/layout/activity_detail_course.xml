<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.DetailCourseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/linearBwah"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:background="@drawable/slide_satu"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="5dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="218dp"
                android:src="@drawable/slide_satu"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:src="@drawable/ic_icon_play"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_arrow"
                app:tint="@color/black"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="19dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Flutter Developer:\nMarket Place"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Samsul Aripin"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/abuabu"
                    android:drawableStart="@drawable/ic_baseline_person_24"
                    android:drawablePadding="7dp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="IDR.350K"
                android:textSize="24sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/blue"
                android:gravity="end"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="24dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/intro"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detail_intro"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_bold"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearBwah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="3"
        android:paddingStart="15dp"
        android:paddingEnd="25dp"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_weight="0.5"
            android:src="@drawable/ic_buy_item"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_weight="2.5"
            android:background="@drawable/bg_btn_buy_pink"
            android:text="BUY NOW"
            android:textColor="@color/white"
            />



    </LinearLayout>

</RelativeLayout>